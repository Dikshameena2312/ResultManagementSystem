<!DOCTYPE html>
<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <style>


       #i{
         display: none;

       }


      @media print{

        #i{
          display: block;
        }
      }
    </style>

    <title>Result</title>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-light fixed-top bg-light">
        <div class="container">
          <div class="navbar-header">
            <p class="navbar-brand">RESULT MANAGEMENT</p>
          </div>
          <ul class="navbar-nav">
            <li id="home" class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <br />

    
          
    <br>
    <br>
    <br>
    <div  id="i">

        
        <img src="../public/assets/SCET-LOGO (3).png" class="img-fluid" alt="...">
        
    </div>
     
    <section style="margin-top: 100px">
      <div class="container">
        <p class="text-sm-start">Name : <%= studentName %></p>
        <p class="text-xl-start">
          Enrolment Number: <span id="enrolment_no"><%= enrolment_no %></span>
        </p>
        <p class="text-xl-start">
          Semester: <span id="sem"><%= studentSem %></span>
        </p>
        <p class="text-xl-start">
          Branch : <span id="branch"><%= studentBranch %></span>
        </p>
      </div>
      <br />
      <div class="container">
        <p
          class="text-xl-start"
          style="display: inline-block; margin-right: 16px"
        >
          Select Semester
        </p>
        <div class="btn-group" id="dropdown-sem">
          <button
            type="button"
            class="btn btn-dark dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
            id="dropdown-button"
          >
            Sem - <%= studentSem %>
          </button>
        </div>
      </div>
      <div class="container">
        <button
          type="button"
          class="btn btn-outline-dark d-print-none"
          style="margin-left: 130px; margin-top: 10px"
          id="searchResult"
        >
          Search
        </button>
      </div>
      <br />
      <div class="container">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">NO.</th>
              <th scope="col">Subject</th>
              <th scope="col">MARKS</th>
              <th scope="col">OUT OF</th>
            </tr>
          </thead>
          <% var status = true %> <% var percentage,sum = 0,sym =' %'; %> <% var
          cnt = 1 %>
          <tbody id="table-body">
            <% studentResult.forEach(function(result){ %> <% sum +=
            result.score; %>
            <tr>
              <th scope="row"><%= cnt++ %></th>
              <td><%= result.name %></td>
              <% if(result.score <= 28) { %>
              <td style="color: rgb(237, 90, 90)"><%= result.score %></td>
              <% status = false %> <% } else{ %>
              <td><%= result.score %></td>
              <% } %>
              <td>70</td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% percentage = (sum / (70 * (cnt - 1))) * 100 %>
        <div class="container" style="margin-top: 50px; text-align: end; font-weight: 700;">
          <p>Percentage : <%= percentage.toFixed(2) %><%= sym %></p>
          <% if(status){ %>
          <p
            style="
              background-color: rgb(107, 241, 112);
              text-align: center;
              color: #fff;
            "
          >
            Status : Pass
          </p>
          <% } else { %>
          <p
            style="
              background-color: rgb(237, 90, 90);
              text-align: center;
              color: #fff;
            "
          >
            Status : Fail
          </p>
          <% } %>
        </div>

        <button
          type="button"
          class="btn btn-outline-dark d-print-none"
          onclick="window.print()"
          style="margin-top: 5px"
        >
          Print Result
        </button>
      </div>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/js/studentResult.js"></script>
  </body>
</html>
