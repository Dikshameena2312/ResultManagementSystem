<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/navbar.css" />

    <title>Result</title>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-light fixed-top bg-light">
        <div class="container">
          <div class="navbar-header">
            <p class="navbar-brand">RESULT MANAGEMENT</p>
          </div>
          <ul class="navbar-nav">
            <li id="home" class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <br />
    <section style="margin-top: 100px">
      <div class="container">
        <p class="text-sm-start">Name : <%= studentName %></p>
        <p class="text-xl-start">Enrolment Number: <%= enrolment_no %></p>
        <p class="text-xl-start">Semester: <%= studentSem %></p>
        <p class="text-xl-start">Branch : <%= studentBranch %></p>
      </div>
      <br />

      <div class="container">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">NO.</th>
              <th scope="col">Subject</th>
              <th scope="col">MARKS</th>
              <th scope="col">OUT OF</th>
            </tr>
          </thead>
          <tbody>
            <% var cnt = 1 %>
            <% studentResult.forEach(function(result){ %>
            <tr>
              <th scope="row"><%= cnt++ %></th>
              <td><%= result.name %></td>
              <td><%= result.score %></td>
              <td>70</td>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <button
          type="button"
          class="btn btn-outline-dark d-print-none"
          onclick="window.print()"
          style="margin-top: 16px;"
        >
          Print Result
        </button>
      </div>
    </section>
  </body>
</html>
