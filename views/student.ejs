<%- include('partials/header'); -%>
    <main>
      <div class="form-style">
        <img src="/assets/result.png"  alt="home-image" class="center" />
        <form method="post" name="myForm"  action="/result" >
          <div class="form-group">
            <label for="inputEnrolment">Enrolment No.</label>
            <input
              type="text"
              class="form-control"
              name="enrolment_no"
              aria-describedby="emailHelp"
              required
            
            />
            <small class="form-text text-muted"
              >Search your results by entering your enrolment no.</small
            >
          </div>
          
        
          <button type="submit" name="fname" class="btn btn-dark" style="width: 125px">
            Search
          </button>
        </form>
      </div>
    </main>
    <script>
      if(window.history.replaceState){
        window.history.replaceState(null,null,window.location.href);
      }
    </script>
  </body>
</html>
